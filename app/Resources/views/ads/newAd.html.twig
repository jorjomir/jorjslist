{% extends 'base.html.twig' %}

{% block main %}
    {{ form_start(form) }}
    <div class="well" id="createAd">
        <div class="col-md-offset-3">
            <form class="form-horizontal" action="{{ path('newAd') }}" method="POST">

                <fieldset>
                    <legend>Нова обява</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_title">Заглавие</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.title) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_summary">Кратко описание</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.summary) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_description">Описание</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.description,
                                {'attr': {'rows' : '8', 'cols' : '60'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_category">Категория</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.categoryId) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_town">Град</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.town) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_phoneNumber">Тел. номер</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_price">Цена</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.price) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="ad_images">Image</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.images) }}
                        </div>
                        <h4>Първата избрана снимка ще бъде главната!</h4>
                    </div>
                    {{ form_row(form._token) }}
                    {{ form_end(form) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Публикувай</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}