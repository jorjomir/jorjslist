{% extends 'base.html.twig' %}
{% block title %}Забравена парола - Jorjslist{% endblock %}
{% block main %}
<div class="well">
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" id="success-alert">
            {{ message }}
        </div>
    {% endfor %}
    <legend>Възстановяване на забравена парола</legend>
    <br/>
    <form class="form-horizontal" name="forgotten-password" action="{{ path('forgottenPassword') }}" method="POST">
    <div class="form-group">
        <label class="col-sm-4 control-label" for="email">Имейл</label>
        <div class="col-sm-4 ">
            {{ form_row(form.email, {'label':false}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label" for="username">Потребителско име</label>
        <div class="col-sm-4 ">
            {{ form_row(form.username, {'label':false}) }}
        </div>
    </div>
        {{ form_row(form._token) }}
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-sm">Продължи</button>
        </div>
    </form>
</div>
{% endblock %}