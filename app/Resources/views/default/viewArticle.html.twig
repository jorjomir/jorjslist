{% extends 'base.html.twig' %}

{% block main %}
<div class="well">
    {% if app.user %}
        {% if app.user.role=="admin" %}
            <div class="text-right">
                <a class="btn btn-danger btn-sm" href="{{ path('deleteArticle', {id: article.id}) }}" onclick="return confirm('Сигурни ли сте, че искате да изтриете тази статия?')">Изтрий</a>
                <a target="_blank" href="{{ path('editArticle', {id : article.id}) }}" class="btn btn-orange btn-sm">Редактирай</a>
            </div>
        {% endif %}
    {% endif %}
    <h2 class="text-center">{{ article.title }}</h2>

    {% if article.image %}
    <img style="max-width: 500px; max-height: 600px" class="img-rounded img-responsive center-block" src="{{ asset('uploads/images/' ~ article.image) }}">
    {% endif %}
    <br/>
    <p>{{ article.content |raw }}</p>
    <h5 class="text-right">Видяно:
        {{ article.views }}
        {% if article.views==1 %}
        път
        {% else %}
        пъти
        {% endif %}
    </h5>
</div>
{% endblock %}