{#
   This is the base template used as the application layout which contains the
   common elements and decorates all the other templates.
   See http://symfony.com/doc/current/book/templating.html#template-inheritance-and-layouts
#}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}JorjsList{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <header>
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
                <div class="navbar-header">
                    <a href="{{ path('index') }}" class="navbar-brand">JorjsList</a>

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">

                            {{ render(controller('AppBundle:Default:primaryMenuCategoriesDropdownMenu')) }}

                        <li><a class="nav-item nav-link" href="{{ path('allArticles') }}">Articles</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li><a id="login" class="nav-item nav-link" href="{{ path('login') }}">Hello, {{ app.user.username }}!</a></li>
                        <li><a id="logout" class="nav-item nav-link" href="{{ path('logout') }}">Logout</a></li>
                        {% if app.user.role=="admin" %}
                            {% if path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) starts with '/admin' %}
                                {% else %}
                                    <li><a id="adminButton" class="nav-item nav-link" href="{{ path('adminIndex') }}">Админ Панел </a></li>
                                {% endif %}
                        {% endif %}
                    {% else %}
                    <li><a id="login" class="nav-item nav-link" href="{{ path('login') }}">Log In</a></li>
                    {% endif %}
                    </ul>
                </div>
        </nav>
    </header>
{% endblock %}

{% block secondNav %}
    {% if path(app.request.attributes.get('_route'),
        app.request.attributes.get('_route_params')) starts with '/admin' %}
        {% include 'admin/adminSidebar.html.twig' %}
    {% endif %}
{% endblock %}


<div class="container body-container">
    {% block body %}
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-12">
            {% if path(app.request.attributes.get('_route'),
                app.request.attributes.get('_route_params')) starts with '/admin' %}
            <div id="mainAdmin">
                {% else %}
                <div id="main">
            {% endif %}

                {% block main %}{% endblock %}
                </div>
            </div>
                {% if not (path(app.request.attributes.get('_route'),
                    app.request.attributes.get('_route_params')) starts with '/admin') %}
                    {{ render(controller('AppBundle:Default:sidebarWidget')) }}
         {% endif %}
            </div>
    {% endblock %}

</div>





{% block footer %}
    <footer class="page-footer mdb-color darken-3 pt-4">
        <div class="footer-copyright text-center py-3">
            <a href="#">© 2019 Copyright Georgi Sabev</a>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
    <script src="{{ asset('js/mdb.min.js') }}"></script>
{% endblock %}

</body>
</html>

