{% extends 'base.html.twig' %}
{% block main %}
    {{ form_start(form) }}
        <div class="well">
            <form id="createArticle" class="form-horizontal" action="{{ path('createArticle') }}" method="POST">
                <fieldset>
                    <legend>New Article</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Article Title</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.title) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-6 control-label" for="article_content"><br/>Content</label>
                        <div class="col-sm-10">
                            {{ form_row(form.content) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_image">Image</label>
                        <div class="col-sm-10">
                            {{ form_row(form.image) }}
                        </div>
                    </div>


                    {{ form_row(form._token) }}
                    {{ form_end(form) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>


{% endblock main %}