{% extends 'base.html.twig' %}
{% block main %}
    {{ form_start(form) }}
        <div class="well">
            <form class="form-horizontal" action="{{ path('createArticle') }}" method="POST">
                <fieldset id="createArticle">
                    <legend>New Article</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_title">Article Title</label>
                        <div class="col-sm-4 ">
                            {{ form_row(form.title) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_content"><br/>Content</label>
                        <div class="col-sm-4">
                            {{ form_row(form.content,
                            {'attr': {'rows' : '8', 'cols' : '60'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="article_image">Image</label>
                        <div class="col-sm-4">
                            {{ form_row(form.image) }}
                        </div>
                    </div>


                    {{ form_row(form._token) }}
                    {{ form_end(form) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>


{% endblock main %}