{% extends 'base.html.twig' %}

{% block main %}
<div class="well">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" id="success-alert">
            {{ message }}
        </div>
    {% endfor %}
    <h4>Всички статии &nbsp; &nbsp;<a class="btn btn-primary btn-sm" type="button" href="{{ path('createArticle') }}" role="button">Създай статия</a></h4>
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Заглавие</th>
        <th scope="col">Дата на добавяне</th>
        <th scope="col">Редактирай</th>
        <th scope="col">Изтрий</th>
    </tr>
    </thead>
    <tbody>
    {% for article in articles %}
    <tr>
        <th scope="row">{{ article.id }}</th>
        <td><a class="overlay" target="_blank" href="{{ path('viewArticle', {id: article.id}) }}">{{ article.title }}</a></td>
        <td>{{ article.dateAdded|date('Y-m-d H:i') }}</td>
        <td><a class="btn btn-info btn-sm" href="{{ path('editArticle', {id: article.id}) }}">Редактирай</a></td>
        <td><a class="btn btn-danger btn-sm" href="{{ path('deleteArticle', {id: article.id}) }}" onclick="return confirm('Сигурни ли сте, че искате да изтриете тази статия?')">Изтрий</a></td>
    </tr>
        {% else %}
        <tr>
            <th scope="row">Няма намерени статии!</th>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}

